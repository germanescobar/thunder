<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content modalv">
      
      <div class="modal-body text-center">
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{role:"form"}) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <div><%= f.label :email ,for:"email"%><br />
            <%= f.email_field :email, autofocus: true ,placeholder:"email"%></div>

            <div><%= f.label :name ,for:"name"%><br />
              <%= f.text_field :name ,placeholder:"name"%></div>

              <div><%= f.label :age ,for:"age"%><br />
                <%= f.text_field :age ,placeholder:"name"%></div>

                <div><%= f.label :password ,for:"password"%> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
                  <%= f.password_field :password, autocomplete: "off",placeholder:"password" %></div>

                  <div><%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off" ,placeholder:"confirmar"%></div>
                  </div>
                  <div><%= f.submit "Sign up",class:"btn btn-primary" %></div>
                  <% end %>

                  
                </div>
              </div>
            </div>
          </div>

          <!-- Modal  new -------------------------->

          <!-- Modal -->
          <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content modalv">
                
                <div class="modal-body text-center">
                  <h2>Forgot your password?</h2>

                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post ,role:"form"}) do |f| %>
                  <%= devise_error_messages! %>
                  <div class="form-group">
                    <%= f.label :email ,for:"email"%><br />
                    <%= f.email_field :email, autofocus: true, placeholder:"email"%>
                  </div>
                  <div><%= f.submit "Send me reset password instructions",class:"btn btn-primary" %></div>
                  <% end %>

                  <%= render "devise/shared/links" %>

                  
                </div>
              </div>
            </div>
          </div>